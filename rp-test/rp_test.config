GS_PORT_START=10000
RP_PORT_START=5000

# In the Private network
LOADER=10.0.0.147
LOADER_DEV=ens2
LOADER_IP=5.5.5.5

# In the Public network.
INITIATOR=10.0.0.148
INITIATOR_DEV=ens2
INITIATOR_IP=30.30.30.20

# Use predefined VMs with PT and SRIOV to keep it simple
RPVM_PT=rp_pt
#RPVM_PT=rp-1804-1804ct
#RPVM_PT=rp-1904-ct-iproute2-1
#RPVM_PT=rp_pp
#RPVM_CT=rp_ct_1125
#RPVM_CT=rp-1904-ct-clone1
#RPVM_CT=rp-1904-ct-iproute2-1
