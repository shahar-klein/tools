RPVM_SRIOV=rp_sriov
RPVM_CONTAINER=rp_bm
RPVM_HA=rp_ha
CONTAINER_IMAGE_ID=55f6bd012b8b

# RP host to ssh to
RP_BM=10.0.0.121

# Private and Public legs on the RP.
RP_PRIV_LEG_IP=5.5.5.2
RP_PRIV_LEG_DEV_VM=enp7s0
RP_PRIV_LEG_DEV_BM=ens4f0
RP_PRIV_LEG_DEV_HA=enp8s0
